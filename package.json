{
  "name": "Kessoku-the-Broadcaster",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:vue dev:electron",
    "dev:vue": "vite",
    "dev:electron": "pnpm transpile:electron; cross-env NODE_ENV=development electron .",
    "build": "rm -rf dist-vue && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "rm -rf dist-electron && tsc -p src/electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.7",
    "mediasoup-client": "3",
    "os-utils": "^0.0.14",
    "socket.io-client": "^4.8.1",
    "vue": "^3.2.31",
    "vue-class-component": "^8.0.0-rc.1",
    "vue-property-decorator": "^10.0.0-rc.3",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/os-utils": "^0.0.4",
    "@types/simple-peer": "^9.11.9",
    "@types/socket.io-client": "^3.0.0",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.3.0",
    "less": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  }
}
