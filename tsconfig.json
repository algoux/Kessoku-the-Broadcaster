{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "app",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src/ui/**/*", "src/common/**/*", "types.d.ts"],
  "exclude": ["src/electron", "node_modules", "dist-electron", "dist-vue"]
}
